{
  "manifest_version": 3,
  "name": "MaxKB浏览器插件",
  "version": "2.0",
  "description": "将选中的文本发送到 MaxKB AI 应用进行智能处理分析！适用于MaxKB 2.0版本",
  "permissions": ["contextMenus", "activeTab", "storage", "scripting", "tabs"],
  "host_permissions": ["file://*/*.pdf", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*.pdf", "<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}